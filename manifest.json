{
    "manifest_version": 3,
    "name": "Better Drive Chat",
    "description": "Emotes and images in Google Docs chat.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "db/emotelist.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
